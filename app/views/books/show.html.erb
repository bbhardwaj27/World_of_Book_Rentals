<div class="container">

  <div class="row my-5">
    <div class="col bg">
      <div class="card" style="width: 30rem;">
        <img src="https://picsum.photos/200" alt="">
        <div class="card-body">
          <h5 class="card-title"><%= @book.title %></h5>
          <p class="card-text"><%= @book.summary %></p>
          <p class="card-text"><%= @book.author %></p>
          <p class="card-text"><%= @book.publishing_year %></p>
          <p class="card-text"><%= @book.price %></p>
          <a href="#"><%= link_to 'Edit', edit_book_path(@book) %><i class="fas fa-pencil-alt"></i></a>
          <a href="#"><%= link_to 'Delete', book_path(@book), method: :delete %><i class="far fa-trash-alt"></i></a>
        </div>
      </div>
    </div>
    <div class="col bg" >
      <div class="card-product-infos my-5" >
        <h2>Reviews</h2>
        <% @book.reviews.each do |review| %>

        <div class="notification">
          <img src='https://kitt.lewagon.com/placeholder/users/Eschults' class="avatar-large"/>
          <div class="notification-content">
            <p><small><%= review.updated_at.strftime('%m/%d/%y') %></small></p>
            <p><%= review.comment %></p>
          </div>

          <div class="notification-actions">
            <a href="#"><%= link_to 'Edit', edit_book_path(@book) %><i class="fas fa-pencil-alt"></i></a>
            <a href="#"><%= link_to 'Delete', book_path(@book), method: :delete %><i class="far fa-trash-alt"></i></a>
          </div>
        </div>

        <% logger.info " Book to review " + @book.title %>
        <%# <%= button_to "Add review", reviews_show_path(@book), method: :create  %>
        <%# <%= link_to 'Add review', review_book_path(@book) %>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to 'Add review', book_review_path(@book) %>
</div>

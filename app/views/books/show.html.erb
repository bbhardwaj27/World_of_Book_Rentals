

<div>
  <%= link_to "Edit this book", edit_book_path(@book), class: 'btn btn-primary' %> |
  <%= link_to "Back to books", books_path, class: 'btn btn-link' %> |
  <%= link_to "Create a review", new_book_review_path(@book), class: 'btn btn-link' %> |
  <%= button_to "Destroy this book", @book, method: :delete, class: 'btn btn-danger btn-sm mt-3', form: { data: { turbo_confirm: 'Are you sure?' } } %>
</div>


<div class="mt-5">
  <h2>Reviews:</h2>

  <% @book.reviews.each do |review| %>
    <div class="row">
      <div class="col">
        <%= review.content %>
      </div>
      <div class="col">
        <%= button_to "Delete this review", review, method: :delete, class: 'btn btn-danger btn-sm', form: { data: { turbo_confirm: 'Are you sure?' } } %>
      </div>
    </div>
    <hr>
  <% end %>
</div>

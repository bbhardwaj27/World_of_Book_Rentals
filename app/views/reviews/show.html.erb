<h1>Review#show</h1>
<div class="card-product-infos>
<div class="card style="width: 18rem;">
<img src="https://picsum.photos/200" alt="">
</div>


<div class="col">
<% logger.info @book %>
<p class="card-text"><%= @book.author %></p>
<p class="card-text"><%= @book.title %></p>

<%# <%= link_to 'Add review', create(@book)  %>

</div>

<h1>Reviews#create</h1>
<p>Find me in app/views/reviews/create.html.erb</p>
<h1>Write a review!</h1>

<%= simple_form_for [@book, @review] do |f| %>

  <%=f.input :comment %>
  <%=f.input :rating %>
  <%= link_to 'Add_review',  book_reviews_path(@book, @review), method: :create %>
  <%=f.submit class: 'btn btn-primary' %>
<% end %>

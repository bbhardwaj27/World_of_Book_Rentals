<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Save book by title,author, publishing_year, review</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Book_Rentals</h3>
    <%= link_to "Create a book list", new_list_path, class: "btn btn-primary" %>
  </div>
  <div class="row">
    <% @book_rentals.each do |book_rental| %>
      <div class="co-12 col-sm-6 col-md-4">
        <%= link_to book_rentals_path(book_rentals), class: "text-decoration-none" do %>
          <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path("book_rentals_background.jpg") %>)">
            <%= book_rentals.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
